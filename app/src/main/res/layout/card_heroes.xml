<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/card_heroes_userfoto"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/card_heroes_usernome"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/nomeAnfitriao"
                    android:text="Alex"/>

                <TextView
                    android:id="@+id/card_heroes_userbairro"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textStyle="normal"
                    android:textColor="@color/bairroAnfitriao"
                    android:text="Vila Mariana"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/card_heroes_btnfavoritar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_like_filled_vector_red"/>

                <TextView
                    android:id="@+id/card_heroes_userpreco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="por noite"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_heroes_btnconversar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="@drawable/shape_btnconversar"
                android:textColor="@color/nomeAnfitriao"
                android:textAllCaps="false"
                android:text="@string/btn_conversar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2.5dp"/>

            <Button
                android:id="@+id/card_heroes_btnreservar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="@drawable/shape_btnreservar"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="@string/btn_reservar"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2.5dp"/>

        </LinearLayout>

</LinearLayout>